# Global Environment Variables for AI Stylist Application

# Database
DATABASE_URL="postgresql://stylist_user:stylist_pass@localhost:5432/ai_stylist"
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# AI Services
OPENAI_API_KEY="your-openai-api-key"
REPLICATE_API_TOKEN="your-replicate-token"

# E-commerce API Keys
MYNTRA_API_KEY="your-myntra-api-key"
AMAZON_API_KEY="your-amazon-api-key"
HM_API_KEY="your-hm-api-key"
AJIO_API_KEY="your-ajio-api-key"
NYKAA_API_KEY="your-nykaa-api-key"

# Server Configuration
NODE_ENV="development"
BACKEND_PORT=5000
AI_SERVICES_PORT=8000
WEB_FRONTEND_PORT=3000

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:19006"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Email Service (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="your-ga-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# Monitoring (Optional)
SENTRY_DSN="your-sentry-dsn"

# Production URLs
PRODUCTION_BACKEND_URL="https://your-backend-domain.com"
PRODUCTION_FRONTEND_URL="https://your-frontend-domain.com"
PRODUCTION_AI_SERVICES_URL="https://your-ai-services-domain.com"